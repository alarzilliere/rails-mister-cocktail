<div class="container text-center">
  <div class="row">
    <h1>All my Cocktails</h1>
    <div><%= link_to "Create a new cocktail", new_cocktail_path, class:"btn btn-primary" %></div>

    <% @cocktails.each do | cocktail | %>

    <div class="col-md-3">
      <div class="card">
      <h2><%= link_to cocktail.name, cocktail_path(cocktail) %>
      </h2>
      </div>
    </div>

      <% end %>
      </div>



</div>
